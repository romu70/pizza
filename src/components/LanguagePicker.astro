---
import { languages } from '../i18n/ui';
const base = import.meta.env.BASE_URL;
---
<ul>
  {Object.entries(languages).map(([lang, label]) => (
    <li>
      <a href={`${base}/${lang}/`}>{label}</a>
    </li>
  ))}
</ul>

<style>
  ul {
    display: flex;
    height: 2rem;
    width: 100%;
    justify-content: center;
    list-style-type: none;
    gap: 2rem;
  }


</style>
